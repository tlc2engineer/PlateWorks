<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_list"

    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/head_pred_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView11"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            android:text="Предъявка" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="50dp"
            android:layout_height="wrap_content"


            android:text="Заказ" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:text="Кол-во" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Масса" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:orientation="horizontal"

        android:id="@+id/item_order_pb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        >
    </LinearLayout>

        <TextView
            android:id="@+id/pred_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="778934" />

        <TextView
        android:id="@+id/item_order_text"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"


            android:gravity="center_vertical"
        android:text="5567" />

        <TextView
            android:id="@+id/item_order_count"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:text="200" />

        <TextView
            android:id="@+id/item_order_mass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2500" />

        <CheckBox
        android:id="@+id/item_order_check"
        android:gravity="center_vertical"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:text="@string/empty" />
</LinearLayout>

</LinearLayout>
