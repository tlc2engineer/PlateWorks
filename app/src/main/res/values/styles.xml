<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="NX">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
     <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="NX" parent="android:Theme.Material.Light" >
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimaryDark">@color/black</item>
    </style>

    <style name="LightDesign" parent="AppBaseTheme" />

    <style name="searchText" parent="AppBaseTheme">
        <item name="android:textSize"> 18sp</item>
        <item name="android:textColor">#0000ff</item>
        <item name="android:gravity"> center</item>

    </style>
    <style name="searchBtn" parent="AppBaseTheme">
        <item name="android:textSize"> 20sp</item>
        <item name="android:background"> @color/orange</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.AppBaseTheme.Light" parent="android:Theme.Material.Light" />


    "

</resources>
