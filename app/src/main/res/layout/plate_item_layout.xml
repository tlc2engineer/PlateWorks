<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_list"

    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/head_plate_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView11"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:text="ID" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="20dp"
            android:layout_height="wrap_content"


            android:text="К" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="110dp"
            android:layout_height="wrap_content"

            android:text="Размер" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Масса" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/item_plate_text"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="778934" />

        <TextView
            android:id="@+id/item_plate_krat"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical|left"


            android:text="1" />

        <TextView
            android:id="@+id/item_plate_size"
            android:layout_width="110dp"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:text="12x2500x6000" />

        <TextView
            android:id="@+id/item_plate_mass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="TextView" />

        <CheckBox
            android:id="@+id/item_plate_check"

            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/empty" />
    </LinearLayout>

</LinearLayout>
